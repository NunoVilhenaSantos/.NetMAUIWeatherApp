                    </StackLayout>
                </StackLayout>-->

                <!--<Image Grid.Column="1" Source="windy.svg" />-->
                <Image Grid.Column="1" Source="wind.png" />
                <Label
                    Grid.Row="1"
                    Grid.Column="1"
                    Margin="10,10"
                    FontAttributes="Bold"
                    FontSize="14"
                    HorizontalOptions="Center"
                    Text="{Binding Wind.Speed}"
                    TextColor="Black" />
                <Label
                    Grid.Row="2"
                    Grid.Column="1"
                    FontSize="11"
                    HorizontalOptions="Center"
                    Text="Wind"
                    TextColor="#7D7D7D" />

                <!--<StackLayout
                    Grid.Column="2"
                    HorizontalOptions="CenterAndExpand"
