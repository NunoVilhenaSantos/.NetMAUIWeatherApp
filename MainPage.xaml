        </StackLayout>


        <StackLayout
            Grid.Row="7"
            Margin="0,20"
            Orientation="Horizontal">
            <!--  Initially hidden  -->
            <!--  IsVisible="false"  -->
            <!--<ListView
                x:Name="CityListView"
                BackgroundColor="White"
                IsVisible="false"
                ItemSelected="OnCitySelected">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell Text="{Binding Name} - {Binding State} ({Binding Country})" />
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>-->
            <!--  IsVisible="false"  -->
            <ListView
                x:Name="CityListView"
                BackgroundColor="White"
                HasUnevenRows="true"
                ItemSelected="OnCitySelected">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout Orientation="Horizontal">
                                <Label
                                    FontAttributes="Italic"
                                    FontSize="Small"
                                    Text="{Binding Name}" />
                                <Label
                                    FontAttributes="None"
                                    FontSize="Small"
                                    Text=" - " />
                                <Label
                                    FontAttributes="None"
                                    FontSize="Small"
                                    Text="{Binding State}" />
                                <Label
                                    FontAttributes="Bold"
                                    FontSize="Small"
                                    Text=" (" />
                                <Label
                                    FontAttributes="Bold"
                                    FontSize="Small"
                                    Text="{Binding Country}" />
                                <Label
                                    FontAttributes="Bold"
                                    FontSize="Small"
                                    Text=")" />
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>


        </StackLayout>


    </Grid>

</ContentPage>