<?xml version="1.0" encoding="utf-8"?>

<ContentPage
    x:Class="WeatherApp.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:helpers="clr-namespace:WeatherApp.Helpers"
    BackgroundColor="{DynamicResource SecondaryColor}">


    <!--  Conteúdo principal  -->
    <ContentPage.Resources>
        <ResourceDictionary>
            <helpers:FahrenheitCelsiusConverter x:Key="FahrenheitToCelsiusConverter" />
            <helpers:LongToDateTimeConverter x:Key="LongToDatetimeConverter" />
            <helpers:StringToImageConverter x:Key="StringToImageConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>


    <ContentPage.ToolbarItems>
        <ToolbarItem
            Clicked="OpenAppShell_Clicked"
            Order="Primary"
            Priority="0"
            Text="Menu" />
        <!--  Clicked="OpenMenu_Clicked" />  -->
    </ContentPage.ToolbarItems>


    <!--  Conteúdo da página principal  -->
    <Grid Margin="20" VerticalOptions="FillAndExpand">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Image
            Grid.RowSpan="4"
            Margin="-20,-20,-20,0"
            Aspect="Fill"
            HeightRequest="330"
            Source="overlay.png"
            VerticalOptions="StartAndExpand" />

        <StackLayout
            Grid.Row="0"
            Margin="0"
            HorizontalOptions="Start"
            Orientation="Vertical"
            Spacing="10"
            VerticalOptions="Center">

            <StackLayout
                HorizontalOptions="StartAndExpand"
                Orientation="Horizontal">
                <Label
                    FontSize="16"
                    Text="{Binding Title}"
                    TextColor="White"
                    VerticalOptions="Center" />
                <Label
                    FontSize="16"
                    Text="{Binding Sys.Country, StringFormat=', {0}'}"
                    TextColor="White"
                    VerticalOptions="Center" />
            </StackLayout>

        </StackLayout>

        <StackLayout
            Grid.Row="1"
            Margin="0,0"
            HorizontalOptions="EndAndExpand"
            Orientation="Vertical"
            Spacing="10"
            VerticalOptions="Start">

            <StackLayout HorizontalOptions="EndAndExpand" Orientation="Horizontal">
                <Frame
                    Padding="5"
                    BackgroundColor="Transparent"
                    CornerRadius="25">
                    <Button
                        x:Name="ButtonCelsius"
                        Clicked="OnCelsiusButtonClicked"
                        Text="ºC"
                        TextColor="White" />
                </Frame>
                <Frame
                    Padding="5"
                    BackgroundColor="Transparent"
                    CornerRadius="25">
                    <Button
                        x:Name="ButtonFahrenheit"
                        Clicked="OnFahrenheitButtonClicked"
                        Text="ºF"
                        TextColor="White" />
                </Frame>
                <Frame
                    Padding="5"
                    BackgroundColor="Transparent"
                    CornerRadius="25">
                    <Button
                        x:Name="ButtonKelvin"
                        Clicked="OnKelvinButtonClicked"
                        Text="ºK"
                        TextColor="White" />
                </Frame>
            </StackLayout>
        </StackLayout>


        <StackLayout
            Grid.Row="1"
            Margin="0,0"
            HorizontalOptions="Start"
            Orientation="Vertical"
            Spacing="10"
            VerticalOptions="Start">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Label
                    x:Name="cityLatitude"
                    Grid.Row="0"
                    FontSize="Micro"
                    Text="{Binding Coord.Lat, StringFormat='Latitude: {0:0}° {0:00}\' {0:00.0}\'\''}"
                    TextColor="White"
                    VerticalOptions="Center" />
                <Label
                    x:Name="cityLongitude"
                    Grid.Row="1"
                    FontSize="Micro"
                    Text="{Binding Coord.Lon, StringFormat='Longitude: {0:0}° {0:00}\' {0:00.0}\'\''}"
                    TextColor="White"
                    VerticalOptions="Center" />
            </Grid>
        </StackLayout>


        <StackLayout
            Grid.Row="2"
            Margin="0,0"
            HorizontalOptions="Center"
            Orientation="Vertical"
            VerticalOptions="Center">
            <StackLayout HorizontalOptions="Center" Orientation="Horizontal">
                <!--  Source="{Binding Weather[0].Icon, Converter={StaticResource StringToImageConverter}}"  -->
                <!--  Source="{Binding Weather[0].Icon}"  -->
                <Image
                    x:Name="weatherIcon"
                    HeightRequest="60"
                    Source="{Binding Weather[0].Icon, Converter={StaticResource StringToImageConverter}}"
                    VerticalOptions="Center"
                    WidthRequest="60" />
                <Label
                    x:Name="TemperatureLabel"
                    FontAttributes="Bold"
                    FontSize="70"
                    Text="{Binding Main.Temperature, Converter={StaticResource FahrenheitToCelsiusConverter}}"
                    TextColor="White"
                    VerticalOptions="Center" />
                <Label
                    x:Name="CelsiusFahrenheitLabel"
                    FontSize="34"
                    Text="°C"
                    TextColor="White"
                    VerticalOptions="Center" />
            </StackLayout>
            <Label
                FontSize="16"
                HorizontalOptions="Center"
                Text="{Binding Weather[0].Description}"
                TextColor="White" />
            <Label
                FontSize="12"
                HorizontalOptions="Center"
                Text="{Binding Dt, Converter={StaticResource LongToDatetimeConverter}}"
                TextColor="White" />
        </StackLayout>


        <Frame
            Grid.Row="3"
            Margin="0,20,0,20"
            Padding="0"
            CornerRadius="10"
            HasShadow="True"
            HeightRequest="120"
            VerticalOptions="Start">

            <Grid
                Margin="0,0,0,0"
                HorizontalOptions="FillAndExpand"
                VerticalOptions="CenterAndExpand">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="30" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!--<StackLayout
                    HorizontalOptions="CenterAndExpand"
