        <Grid Grid.Row="4" Margin="0,0,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <!--  Define a altura automática para cada linha  -->
                <RowDefinition Height="Auto" />
                <!--  Define a altura automática para a segunda linha  -->
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="40" />
                <!--  Primeira coluna com tamanho automático para as imagens  -->
                <ColumnDefinition Width="Auto" />
                <!--  Segunda coluna para a primeira label  -->
                <ColumnDefinition />
                <!--  Terceira coluna para a segunda label  -->
            </Grid.ColumnDefinitions>
            <!--  Primeira linha  -->
            <Image
                Grid.Row="0"
                Grid.Column="0"
                Source="weather_icons_70_sun_up.svg" />
            <Label
                Grid.Row="0"
                Grid.Column="1"
                Margin="10,0"
                FontAttributes="Bold"
                FontSize="Small"
                Text="Time of Sunrise"
                TextColor="Black"
                VerticalOptions="Center" />
            <Label
                x:Name="SunriseDateTime"
                Grid.Row="0"
                Grid.Column="2"
                FontSize="Small"
                Text="{Binding Sys.Sunrise, Converter={StaticResource LongToDatetimeConverter}}"
                TextColor="Black"
                VerticalOptions="Center" />

            <!--  Segunda linha  -->
            <Image
                Grid.Row="1"
                Grid.Column="0"
                Source="weather_icons_69_sun_down.svg" />
            <Label
                x:Name="SunsetDateTime"
                Grid.Row="1"
                Grid.Column="1"
                Margin="10,0"
                FontAttributes="Bold"
                FontSize="Small"
                Text="Time of Sunset"
                TextColor="Black"
                VerticalOptions="Center" />
            <Label
                Grid.Row="1"
                Grid.Column="2"
                FontSize="Small"
                Text="{Binding Sys.Sunset, Converter={StaticResource LongToDatetimeConverter}}"
                TextColor="Black"
                VerticalOptions="Center" />
        </Grid>


        <StackLayout
            Grid.Row="5"
            Margin="0,20,0,0"
            Orientation="Horizontal">
            <Entry
                x:Name="CityEntry"
                Margin="5,0"
                BackgroundColor="#7c58c9"
                CharacterSpacing="4"
                HorizontalTextAlignment="Center"
                Text="Beijing"
                TextColor="White"
                VerticalOptions="Center"
                WidthRequest="200" />
            <Button
                x:Name="GetWeatherButton"
                BackgroundColor="#7c58c9"
                BorderColor="White"
                BorderWidth="1"
                Clicked="OnGetWeatherButtonClicked"
                Text="Get Weather"
                TextColor="White" />
        </StackLayout>


        <StackLayout
            Grid.Row="6"
            Margin="0,20,0,0"
            Orientation="Horizontal">
            <Entry
                x:Name="CityGeoCodingEntry"
                Margin="5,0"
                BackgroundColor="#7c58c9"
                CharacterSpacing="4"
                HorizontalTextAlignment="Center"
                Text="Beijing"
                TextColor="White"
                VerticalOptions="Center"
                WidthRequest="100" />

            <Button
                x:Name="GetCitiesGeoCodingButton"
                BackgroundColor="#7c58c9"
                BorderColor="White"
                BorderWidth="1"
                Clicked="OnGetGeoCodingCitiesButtonClicked"
                Text="Get Cities"
                TextColor="White" />

            <!--  Initially hidden  -->
            <!--  IsVisible="false"  -->
